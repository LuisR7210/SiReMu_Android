<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaPlaylist">

    <ListView
        android:id="@+id/lvBuscados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:choiceMode="multipleChoice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
    android:id="@+id/ibtMeGusta"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_favorite_black_24dp"
    android:tint="@android:color/white"
    android:background="@android:color/transparent"
    android:layout_marginStart="50dp"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:padding="0dp"
    android:contentDescription="@string/menu_me_gusta" />

    <ImageButton
        android:id="@+id/ibtAgregarPlaylists"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/menu_me_gusta"
        android:padding="0dp"
        android:src="@drawable/ic_baseline_playlist_add_24"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibtMeGusta" />

    <ImageButton
        android:id="@+id/ibtGenerarEstacion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/menu_me_gusta"
        android:padding="0dp"
        android:src="@drawable/ic_baseline_radio_24"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>